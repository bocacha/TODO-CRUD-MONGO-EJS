<%- include ('partial/_header') -%>
 
 <div class="container">
     <div class="row">
         <!--FORM-->
 <div class="col-md-5 offset-md-3">
    <div class="card">
        <div class="card-body">
            <form action="/edit/<%= task._id %>" method="POST">

                <div class="form-group">
                    <input style="margin-bottom:15px;" type="text" name="title" class="form-control" placeholder="Insert a Title" value="<%= task.title %>">
                </div>

                <div class="form-group">
                    <textarea style="margin-bottom:15px;" name="description" cols="80" class="form-control" placeholder="Insert a Description"><%= task.description %></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-100">Save</button>

            </form>
        </div>
    </div>
</div>

     </div>

 </div>


<%- include ('partial/_footer') -%>